<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".EpidemicPreventionActivity">


<ScrollView
    android:layout_width="410dp"
    android:layout_height="714dp"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="406dp"
            android:layout_height="143dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="5dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/student" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho học sinh" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:src="@drawable/school" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho trường học" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/bus" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho khách tham gia phương tiện giao thông công cộng" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/vanphong" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho chung cư" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/trieuchung" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho người có triệu chứng" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/workplace" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="282dp"
                    android:layout_height="match_parent"
                    android:text="Dành cho nơi làm việc" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/family" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho gia đình" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/service" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho dịch vụ" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/ambulance" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Thông diệp 5K" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/market" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Dành cho chợ đầu mối, dân sinh" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/shield1" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Các biện pháp phòng tránh dịch trong thời kỳ mới" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/talkshow" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="Tọa đàm phòng chống dịch COVID-19" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/audio" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="269dp"
                    android:layout_height="107dp"
                    android:text="AUDIO hướng dẫn phòng chống dịch" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>