<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoEmp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ Và Tên *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="20sp"/>
    <EditText
        android:id="@+id/mal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Họ Và Tên"
        android:inputType="text"
        android:textColor="#000"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tháng năm sinh *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"/>
    <EditText
        android:id="@+id/usrusr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày/tháng/năm(VD:08/03/2020)"
        android:inputType="datetime"
        android:textColor="#000"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới Tính *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35sp">
        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:onClick="onRadioButtonClicked"
            android:layout_marginRight="10sp"/>
        <RadioButton android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:onClick="onRadioButtonClicked"
            />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số CMTND/CCCD/Hộ chiếu *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"/>
    <EditText
        android:id="@+id/pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CMTND/CCCD/Hộ chiếu"
        android:inputType="text"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5sp"
        android:padding="3dp"

        />

    <!--    <EditText-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="Quốc Tịch *"-->
