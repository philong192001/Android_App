    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa Chỉ Hiện Tại *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="20dp" />
    <Spinner
        android:id="@+id/spinner_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="25sp"
        android:spinnerMode="dropdown"/>
    <Spinner
        android:id="@+id/spinner_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="25sp"
        android:spinnerMode="dropdown"/>
    <Spinner
        android:id="@+id/spinner_wards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="25sp"
        android:spinnerMode="dropdown"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số nhà, đường,...."
        android:inputType="text"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="3dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại *"
        android:textSize="15dp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="text"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:padding="3dp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:hint="Tôi cam kết các thông tin khai là đúng sự thật và đồng ý với Điều khoản sử dụng" />
    <Button
        android:id="@+id/submitInfoPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đồng Ý"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@color/white"
        android:background="@color/black"/>

